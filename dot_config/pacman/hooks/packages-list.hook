#/etc/pacman.d/hooks/50-pacman-list.hook
[Trigger]
Type = Package
Operation = Install
Operation = Upgrade
Operation = Remove
Target = *

[Action]
Description = Create a list of all installed packages
When = PreTransaction
Exec = /bin/sh -c 'pacman -Qqett | sort | uniq | grep -v "nvidia-dkms\|nvidia-settings\|amd-ucode\|intel-ucode" > "~/.local/share/chezmoi/dot_config/pacman/packages.lst'
